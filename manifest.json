{

  "description": "Estende as funcionalidades do SIA facilitando, por exemplo, o planejamento de disciplinas",
  "manifest_version": 2,
  "name": "SIAmês",
  "author": "Márcio Torres",
  "version": "0.3",
  "icons": {
    "64": "icons/siames-64.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "32": "icons/siames-32.png",
      "64": "icons/siames-64.png"
    },
    "default_title": "SIAmês",
    "default_popup": "popup/form.html"
  }

}
